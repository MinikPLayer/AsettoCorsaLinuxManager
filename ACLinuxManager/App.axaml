<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ACLinuxManager.Converters"
             x:Class="ACLinuxManager.App">
    
    <Application.Styles>
        <StyleInclude Source="avares://AvaloniaAutoThemeAddon/Styles/AutoThemeStyles.axaml"/>
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml" />
        <FluentTheme Mode="Dark"/>
    </Application.Styles>
    
    <Application.Resources>
        <!-- <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FFFF0000"/> -->
        <ResourceDictionary>
            <converters:BooleanInverter x:Key="BooleanInverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
